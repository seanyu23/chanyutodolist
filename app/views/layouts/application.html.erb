<!DOCTYPE html>
<%= javascript_include_tag 'rails' %>
 <%= javascript_include_tag :defaults %>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/tasks">My To Do List</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      	<li><a href="/">Everyone's To Do List</a></li>
        <li><a href="/tasks/today">Today's Tasks</a></li>
        <li><a href="/help">Help</a></li>       
      	<li><a href="/creators">Creators</a></li>
        <% if user_signed_in? %>
            <li><font color="white"> You are currenty signed in as <%= current_user.email %></font> </li>
        <%= link_to "Sign out", logout_path, :method => :delete %>
        <% else %>
         <li> <font color="white"> <%= link_to "Sign up", new_user_registration_path %>
          or <%= link_to "Sign in", new_user_session_path %> </li>
        <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<html>
<head>
  <title>ToDoList50</title>
  <%= stylesheet_link_tag    "flatly", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "flatly", "data-turbolinks-track" => true %>
 
  <%= csrf_meta_tags %>
</head>
<style>
body{height: 100%}
body {


   background-image: url('/assets/working.jpg');
   background-position: bottom;
   background-attachment: fixed;
   background-repeat: no-repeat;
   background-size: 100% 100%;
   color: #0A0670;
   

 }</style>

<%= yield %>

